{
  "name": "apps-copilot",
  "displayName": "Apps Copilot",
  "description": "Connecting 20,000 Apps in one place",
  "version": "0.0.1",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apps-copilot.undo",
        "title": "Undo",
        "icon": "$(arrow-left)"
      },
      {
        "command": "apps-copilot.redo",
        "title": "Redo",
        "icon": "$(arrow-right)"
      },
      {
        "command": "apps-copilot.newChat",
        "title": "New Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "apps-copilot.history",
        "title": "History",
        "icon": "$(history)"
      },
      {
        "command": "apps-copilot.mcpServers",
        "title": "MCP Servers",
        "icon": "$(plug)"
      },
      {
        "command": "apps-copilot.account",
        "title": "Account",
        "icon": "$(account)"
      },
      {
        "command": "apps-copilot.openSettings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "apps-copilot.close",
        "title": "Close",
        "icon": "$(close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apps-copilot",
          "title": "Apps Copilot",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "apps-copilot": [
        {
          "type": "webview",
          "id": "apps-copilot.chatView",
          "name": "",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "apps-copilot.undo",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@1"
        },
        {
          "command": "apps-copilot.redo",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@2"
        },
        {
          "command": "apps-copilot.newChat",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@3"
        },
        {
          "command": "apps-copilot.history",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@4"
        },
        {
          "command": "apps-copilot.mcpServers",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@5"
        },
        {
          "command": "apps-copilot.account",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@6"
        },
        {
          "command": "apps-copilot.openSettings",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@7"
        },
        {
          "command": "apps-copilot.close",
          "when": "view == apps-copilot.chatView",
          "group": "navigation@8"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
